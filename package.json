{
  "name": "techpulse",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest",
    "test:unit": "vitest --run",
    "test:smoke": "node test-combat-system.js",
    "test:ui": "cypress run",
    "test:ui:open": "cypress open",
    "test:load:k6": "k6 run scripts/load/basic-k6.js",
    "test:security:audit": "npm audit --audit-level=high || true",
    "test:security:prisma": "prisma validate",
    "test:all": "npm run test:unit && npm run build && npm run test:smoke",
    "changelog:update": "npx tsx scripts/update-changelog.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node scripts/seed.ts",
    "prisma:seed-tribes": "npx tsx scripts/seed-fake-tribes.ts",
    "prisma:seed-storage": "npx tsx scripts/seed-storage-data.ts",
    "prisma:create-users": "npx tsx scripts/create-users.ts",
    "resource:seed": "npx tsx scripts/seed-resource-system.ts",
    "seed:troops": "npx tsx scripts/seed-troop-balance.ts",
    "seed:heroes": "npx tsx scripts/seed-hero-bonuses.ts",
    "db:drop": "node -e \"try{require('fs').rmSync('prisma/dev.db',{force:true})}catch(e){}\"",
    "db:seed-all": "npm run resource:seed && npm run prisma:seed-storage && npm run seed:troops && npm run seed:heroes && npm run seed:tech && npm run prisma:seed && npm run prisma:seed-tribes",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run db:seed-all",
    "db:refresh": "npm run db:drop && npm run db:setup",
    "dev:refresh": "npm run db:refresh && vite",
    "seed:tech": "npx tsx scripts/seed-technologies.ts",
    "seed:events": "ts-node scripts/seed-events.ts",
    "test:resources": "npx tsx --test tests/resource-production-helpers.test.ts",
    "start": "vite preview",
    "notifications:purge-old": "npx tsx scripts/purge-old-notifications.ts"
  },
